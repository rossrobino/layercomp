{
	"name": "layercomp",
	"version": "0.0.16",
	"description": "A layer of components for TailwindCSS projects",
	"keywords": [
		"CSS",
		"TailwindCSS",
		"components"
	],
	"homepage": "https://layercomp.robino.dev",
	"license": "MIT",
	"author": {
		"name": "Ross Robino",
		"url": "https://robino.dev"
	},
	"repository": "github:rossrobino/layercomp",
	"type": "module",
	"types": "./plugin/index.js",
	"main": "./plugin/index.js",
	"exports": {
		".": {
			"types": "./plugin/index.d.ts",
			"default": "./plugin/index.js"
		}
	},
	"files": [
		"plugin"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --write . --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss",
		"pub": "npm run format && npm run doc && publint && npm publish --access public",
		"doc": "node scripts/copyReadMe.js"
	},
	"dependencies": {
		"tailwindcss": "^3.3.3"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.24.0",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^20.5.7",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"autoprefixer": "^10.4.15",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.33.0",
		"marked": "^7.0.5",
		"postcss": "^8.4.29",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.4",
		"publint": "^0.2.2",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.1",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9"
	}
}
