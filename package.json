{
	"name": "layercomp",
	"version": "0.0.6",
	"description": "Component layer for TailwindCSS projects",
	"type": "module",
	"exports": {
		".": "./src/all.css",
		"./button": "./src/button.css",
		"./input": "./src/input.css",
		"./label": "./src/label.css",
		"./link": "./src/link.css"
	},
	"files": [
		"src"
	],
	"scripts": {
		"dev": "npm run doc && tailwindcss -i ./site/styles/styles.css -o ./site/styles/output.css --watch --minify",
		"build": "npm run doc && tailwindcss -i ./site/styles/styles.css -o ./site/styles/output.css --minify",
		"doc": "node scripts/doc.js && npm run format",
		"format": "prettier --write . --plugin=prettier-plugin-tailwindcss --plugin=prettier-plugin-css-order",
		"pub": "npm publish --access public"
	},
	"keywords": [
		"css",
		"components",
		"tailwindcss"
	],
	"license": "MIT",
	"author": {
		"name": "Ross Robino",
		"url": "https://robino.dev"
	},
	"repository": "github:rossrobino/layercomp",
	"peerDependencies": {
		"tailwindcss": "^3.3.3"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.9",
		"marked": "^7.0.5",
		"prettier": "^3.0.3",
		"prettier-plugin-css-order": "^2.0.0",
		"prettier-plugin-tailwindcss": "^0.5.3"
	}
}
